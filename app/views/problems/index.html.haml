- model_class = Problem
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:gym_id)
      %th= model_class.human_attribute_name(:active)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:grade)
      %th= model_class.human_attribute_name(:height)
      %th= model_class.human_attribute_name(:grade_type)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @problems.each do |problem|
      %tr
        %td= link_to problem.id, gym_problem_path(problem.gym, problem)
        %td= problem.gym_id
        %td= problem.active
        %td= problem.name
        %td= problem.grade
        %td= problem.height
        %td= problem.grade_type        
        %td= problem.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_gym_problem_path(problem.gym, problem), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), gym_problem_path(problem.gym, problem), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_gym_problem_path, :class => 'btn btn-primary'
