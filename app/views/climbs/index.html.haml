- model_class = Climb
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:route_id)
      %th= model_class.human_attribute_name(:attempted_on)
      %th= model_class.human_attribute_name(:success)
      %th= model_class.human_attribute_name(:rating)
      %th= model_class.human_attribute_name(:comment)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @climbs.each do |climb|
      %tr
        %td= link_to climb.id, climb_path(climb)
        %td= climb.user_id
        %td= climb.route_id
        %td= climb.attempted_on
        %td= climb.success
        %td= climb.rating
        %td= climb.comment
        %td=l climb.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_climb_path(climb), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), climb_path(climb), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_climb_path, :class => 'btn btn-primary'
