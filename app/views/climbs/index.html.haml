.page-header
  %h1 
    My Climbs
    .span.pull-right
      = link_to 'Log a Climb', new_climb_path, class: 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th Problem
      %th Attempted
      %th Grade
      %th Success
      %th Comment
      %th
  %tbody
    - @climbs.each do |climb|
      %tr
        %td= climb.problem
        %td= climb.attempted_on
        %td= climb.grade
        %td= climb.success
        %td= climb.comment
        %td
          .pull-right
            = link_to edit_climb_path(climb), class: 'btn btn-mini' do
              %i.icon-edit


