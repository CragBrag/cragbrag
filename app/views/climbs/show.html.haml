- model_class = Climb
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @climb.user_id
%p
  %strong= model_class.human_attribute_name(:route_id) + ':'
  %br
  = @climb.route_id
%p
  %strong= model_class.human_attribute_name(:attempted_on) + ':'
  %br
  = @climb.attempted_on
%p
  %strong= model_class.human_attribute_name(:success) + ':'
  %br
  = @climb.success
%p
  %strong= model_class.human_attribute_name(:grade) + ':'
  %br
  = @climb.grade
%p
  %strong= model_class.human_attribute_name(:comment) + ':'
  %br
  = @climb.comment

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), climbs_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_climb_path(@climb), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), climb_path(@climb), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
