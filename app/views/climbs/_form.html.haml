= simple_form_for @climb, :html => { :class => 'form-horizontal' } do |f|
  = f.input :problem do
    = f.grouped_collection_select :problem_id, Gym.order(:name), :problems, :name, :id, :name, include_blank: false
  = f.input :attempted_on
  = f.input :success
  = f.input :grade
  = f.input :comment
  = f.button :submit, class: 'btn btn-primary'

= link_to t('.cancel', :default => t("helpers.links.cancel")), climbs_path, :class => 'btn'
