- model_class = Route
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:gym_id) + ':'
  %br
  = @route.gym_id
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @route.active
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @route.name
%p
  %strong= model_class.human_attribute_name(:raiting) + ':'
  %br
  = @route.raiting

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), gym_routes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_gym_route_path(@route.gym, @route), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), gym_route_path(@route.gym, @route), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
