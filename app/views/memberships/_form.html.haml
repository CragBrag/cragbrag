= form_for @membership, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.text_field :user_id, :class => 'text_field'
  .control-group
    = f.label :gym_id, :class => 'control-label'
    .controls
      = f.text_field :gym_id, :class => 'text_field'
  .control-group
    = f.label :role, :class => 'control-label'
    .controls
      = f.text_field :role, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), memberships_path, :class => 'btn'
